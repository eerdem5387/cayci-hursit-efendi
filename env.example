# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Database
DATABASE_URL="file:./dev.db"

# S3 Object Storage (Production)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# Optional public base URL if using CDN/custom domain (e.g. https://cdn.example.com)
S3_PUBLIC_BASE_URL=
# Optional ACL (default public-read)
S3_ACL=public-read

# Public Site URL (for metadataBase, emails, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Payments - Ziraat POS (Optional)
ZIRAAT_POS_MERCHANT_ID=
ZIRAAT_POS_TERMINAL_ID=
ZIRAAT_POS_URL=

# Admin bootstrap (optional helpers, not required if /admin/setup used)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password
